<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.fileproject.mapper.PhotoLabelMapper">

    <resultMap id="BaseResultMap" type="com.example.fileproject.domain.PhotoLabel">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="photoId" column="photo_id" jdbcType="INTEGER"/>
            <result property="labelId" column="label_id" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,photo_id,label_id,
        create_time,update_time
    </sql>
    <select id="selectPhotoLabelPage" resultType="com.example.fileproject.dto.PhotoLabelVO">
        select * from photo_label
        <where>
            <if test="req.labelId!= null">
                and label_id = #{req.labelId}
            </if>
        </where>
        order by create_time desc
    </select>
</mapper>
